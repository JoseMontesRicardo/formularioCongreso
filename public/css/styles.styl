@import 'nib'
@import 'nib/vendor'
vendor-prefixes = o ms webkit moz official

orange 	= #FFA726
green 		= #64DD17
gray 		= #CFD8DC
darkgray 	= #455A64
darkorange 	= #FF9800
body
	background-color none
	margin 0
	font-size 16px
input
	border-radius 3px
	border 1px solid gray
	color grey
	display block
	margin auto
	margin-top 5px
	width 250px
	font-size 20px
footer
	background-color darkgray
	height 220px
	position relative
	text-align center
section
	position relative
	padding 3em 0 3em 0
	overflow 
	height 400px
td
	padding 0.5em
tr
	background-color gray
	color grey
.alert
	font-family 'Oswald', sans-serif
	color grey
	font-size 2em
.button
	background-color orange
	border-color orange
	color white
	&:hover
		background-color darkorange
.content-logo-diocesis
	position absolute
	top 2%
	right  20%
	width 200px
.content-logo-pastoral
	margin 0
	width 180px
	position absolute
	top 25px
	left 15%
.content-form
	position absolute
	top 7%
	left 20%
.content-messge
	text-align center
.content-orgnizadores
	text-align center
	position absolute
	left 30%
	width 160px
.content-invitan
	text-align center
	position absolute
	right  30%
	width 160px
.fill-header
	background-color orange
	color white
	text-align center
.form-title
	color grey
	font-family 'Architects Daughter', cursive
	font-weight bold
	font-size 2em
	margin 0
	text-align center
.footer-logo-pastoral
	display inline
	margin 0
.footer-logo-rcc
	display inline
	margin 0
.footer-logo-diocesis
	display inline
	margin 0
.logo-pastoral
	width 100%
	border-radius 50%
	box-shadow 0 2px 5px  black
.logo-diocesis-foot
	margin 3px
	width 40px
.logo-rcc-foot
	border-radius 10%
	box-shadow 0 2px 5px  black
	margin 3px
	width 60px
.logo-pastoral-foot
	width 60px
	border-radius 50%
	margin 3px
	box-shadow 0 2px 5px  black
.logo-diocesis
	width 100%
.message
	font-family 'Oswald', sans-serif
	font-size 3em
	color green
.message-error
	font-size 2em
	color red
.table
	font-family 'Oswald', sans-serif
	margin auto
.title-content
	background-color orange
	box-shadow 0 1px 5px  black
	text-align center
	padding 2em
	position relative
.title 
	color white
	margin 0
	font-size 4.5em
	font-family 'Architects Daughter', cursive
	text-shadow 0 2px 5px  black
.title-invitan
	color white
	font-family 'Oswald', sans-serif
	margin 1.2em 0 0 0
.title-organizadores
	color white
	font-family 'Oswald', sans-serif
	margin 1em 0 0 0
	padding-top 0.3em
	padding-bottom 0.5em
.title-registrados
	color grey
	font-family 'Oswald', sans-serif
	text-align center
.team-monteriajs
	border-top 1px solid  #607D8B
	color white
	font-family 'Oswald', sans-serif
	position absolute
	left 31%
	bottom 30px
	width 500px
.p-title 
	color green
	margin 0
	font-family 'Oswald', sans-serif
	font-size 3em
	font-weight bold
	shadow-stroke(black)



